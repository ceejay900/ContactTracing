<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fragment_information"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.information.InformationFragment"
    android:background="@drawable/background_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_gravity="end">

        <TextView
            android:id="@+id/dateRegistered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="yyyy-mm-dd"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/timeRegistered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="yyyy-mm-dd"
            android:textColor="#fff"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/person"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:inputType="text"
        android:hint="Enter your Name..."
        android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/newlocation"/>

        <EditText
            android:textColor="#fff"
            android:id="@+id/address"
            android:layout_width="350dp"
            android:inputType="text"
            android:textColorHint="#fff"
            android:layout_height="40dp"
            android:hint="Enter your Address..."
            android:textSize="15sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/newage"/>

        <EditText
            android:id="@+id/age"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:inputType="number"
            android:hint="Enter your Age..."
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/newcontact"/>


        <EditText
            android:id="@+id/contact"
            android:layout_width="350dp"
            android:inputType="number"
            android:layout_height="40dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:hint="Enter your Contact..."
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:background="@drawable/shape"
            android:text="Add"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/viewdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:background="@drawable/shape"
            android:textAllCaps="false"
            android:text="ViewData"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>